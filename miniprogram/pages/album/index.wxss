.title-hrbg {
  position: relative;
  z-index: 1;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  color: rgb(41, 41, 41);
  text-align: center;
}

.title-hrbg .cont {
  background: #f7f7f7;
  padding: 1rem 0.6rem;
  z-index: 10;
}

.title-hrbg .cont .icon-huo {
  padding-right: 10rpx;
}

.title-hrbg .hr {
  background: #ddd;
  height: 1rpx;
  border: 0;
  position: absolute;
  left: 10%;
  right: 10%;
  top: 50%;
  margin-top: 1px;
  z-index: -1;
}
.order-navbar {
  left: 19rpx;
  margin: auto;
  padding: 15rpx 0;
  width: 100%;
  box-shadow: 0 2rpx 15rpx 0px rgba(0, 0, 0, 0.05);
  border-top: 1rpx solid #eee;
  border-radius: 5rpx;
  background: #fff;
}